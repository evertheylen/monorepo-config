{
  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "module": "nodenext",
    "target": "es2024",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "__test__"],
  "exclude": ["node_modules", "dist"]
}
